{
  "compilerOptions": {
    /* Base options */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "noEmit": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "@typescript/lib-dom",
      "bun-types",
      "vue",
      "chrome-types"
    ],
    "baseUrl": "./",
    "paths": {
      "@utils/*": [
        "src/common/utils/*"
      ],
      "@store/*": [
        "src/popup/stores/*"
      ],
      "@storage/*": [
        "src/common/storage/*",
        "src/background/storage/*"
      ],
      "@interfaces/*": [
        "src/common/interfaces/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "rollup*.config.ts",
    "rollup/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
